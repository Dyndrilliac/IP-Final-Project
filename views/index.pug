  #myOverlay.w3-overlay.w3-hide-large(onclick='w3_close()', style='cursor:pointer', title='close side menu')
  .w3-main.w3-white(style='margin-left:260px')
    .w3-hide-large(style='margin-top:80px')
    #apartment.w3-container
    h2.w3-text-blue Randomized Workout Routine
